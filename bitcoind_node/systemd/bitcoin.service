[Unit]
Description=Bitcoin daemon
After=network-online.target
Wants=network-online.target

[Service]
ExecStart=/usr/local/bin/bitcoind -daemon -conf=/home/$USER/.bitcoin/bitcoin.conf
ExecStop=/usr/local/bin/bitcoin-cli stop
Restart=always
RestartSec=10
TimeoutStopSec=120
User=$USER

[Install]
WantedBy=multi-user.target
